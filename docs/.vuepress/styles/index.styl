$contentWidth = 900px

.sidebar {
    width: 17rem;
}
.page {
    padding-left: 17rem;
}

.theme-container .sidebar > .sidebar-links > li > a.sidebar-link {
    height: 40px;
    line-height: 40px;
    color: #444;
    font-size: 14px;
    font-weight: 400;
}

.theme-default-content:not(.custom) {
    max-width: 100%;
}
.theme-default-content pre,
.theme-default-content pre[class*="language-"] {
    margin: 0;
    background-color: #fff;
}
.theme-default-content pre code,
.theme-default-content pre[class*="language-"] code{
    color: #3182bd;
}

footer.page-edit,
.page .page-nav {
    max-width: 100%;
}

table {
    margin: 0;
}
table th,
table td {
    background: initial;
    border: 0;
}